{
  "name": "clickup-mcp-server",
  "version": "1.1.0",
  "description": "MCP server para ClickUp: hierarquia do workspace, tarefas, comentários e membros.",
  "entryPoint": "node mcp/clickup-mcp-server.js",
  "tools": [
    {
      "name": "get_workspace_hierarchy",
      "description": "Recupera Spaces, Folders e Lists do workspace.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "team_id": { "type": "string", "description": "Opcional, usa CLICKUP_TEAM_ID" },
          "space_name": { "type": "string", "description": "Filtro parcial por Space" },
          "folder_name": { "type": "string", "description": "Filtro parcial por Folder" },
          "list_name": { "type": "string", "description": "Filtro parcial por List" },
          "include_archived": { "type": "boolean", "description": "Incluir arquivados" }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "team_id": { "type": "string" },
          "spaces": { "type": "array", "items": { "type": "object" } }
        }
      }
    },
    {
      "name": "get_list",
      "description": "Busca detalhes de uma List.",
      "inputSchema": {
        "type": "object",
        "required": ["list_id"],
        "properties": {
          "list_id": { "type": "string" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "create_task",
      "description": "Cria tarefa em uma List específica.",
      "inputSchema": {
        "type": "object",
        "required": ["list_id", "name"],
        "properties": {
          "list_id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" },
          "assignees": { "type": "array", "items": { "type": "string" } },
          "due_date": { "type": "integer", "description": "Unix ms" },
          "priority": { "type": "integer" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "get_task",
      "description": "Recupera detalhes completos de uma tarefa.",
      "inputSchema": {
        "type": "object",
        "required": ["task_id"],
        "properties": {
          "task_id": { "type": "string" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "update_task",
      "description": "Atualiza campos de uma tarefa.",
      "inputSchema": {
        "type": "object",
        "required": ["task_id"],
        "properties": {
          "task_id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" },
          "assignees": { "type": "array", "items": { "type": "string" } },
          "due_date": { "type": "integer" },
          "priority": { "type": "integer" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "get_workspace_tasks",
      "description": "Lista tarefas do workspace ou de uma List com filtros.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "team_id": { "type": "string", "description": "Opcional, usa CLICKUP_TEAM_ID" },
          "list_id": { "type": "string", "description": "Se presente, filtra pela List" },
          "assignees": { "type": "array", "items": { "type": "string" } },
          "statuses": { "type": "array", "items": { "type": "string" } },
          "include_closed": { "type": "boolean" },
          "page": { "type": "integer" },
          "order_by": { "type": "string" },
          "reverse": { "type": "boolean" },
          "due_date_gt": { "type": "integer" },
          "due_date_lt": { "type": "integer" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "get_task_comments",
      "description": "Lista comentários de uma tarefa.",
      "inputSchema": {
        "type": "object",
        "required": ["task_id"],
        "properties": {
          "task_id": { "type": "string" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "create_task_comment",
      "description": "Cria um comentário em uma tarefa.",
      "inputSchema": {
        "type": "object",
        "required": ["task_id", "comment_text"],
        "properties": {
          "task_id": { "type": "string" },
          "comment_text": { "type": "string" },
          "notify_all": { "type": "boolean" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "get_workspace_members",
      "description": "Lista membros e convidados do workspace.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "team_id": { "type": "string", "description": "Opcional, usa CLICKUP_TEAM_ID" }
        }
      },
      "outputSchema": { "type": "object" }
    },
    {
      "name": "find_member_by_name",
      "description": "Busca membro por nome ou email.",
      "inputSchema": {
        "type": "object",
        "required": ["query"],
        "properties": {
          "query": { "type": "string" },
          "team_id": { "type": "string", "description": "Opcional, usa CLICKUP_TEAM_ID" }
        }
      },
      "outputSchema": { "type": "object" }
    }
  ],
  "environment": ["CLICKUP_API_TOKEN", "CLICKUP_API_KEY", "CLICKUP_TEAM_ID", "PORT"]
}
